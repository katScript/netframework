@using WDP2022A2Win.ViewModels
@model WDP2022A2Win.ViewModels.CompanyViewModels

@{
    ViewBag.Title = "Create Company";
    Layout = "_Layout";
}

<section class="section-data text-center">
    <div class="overlay"></div>
    <img src="/images/bg2.jpg" class="tech-bg img-fluid" alt="top-6-tech"/>

    <div class="tech-flow h-100 align-items-center text-center">
        <div class="container d-flex h-100 align-items-center text-center">
            <div class="w-100 text-white">
                <h1 class="topic-header display-3">Add new Company</h1>
                <hr>
                <form asp-action="Save" enctype="multipart/form-data">
                    @(Html.HiddenFor(m => m.Id))
                    <div class="form-group">
                        <label for="cmp-name">Company Name</label>
                        <input asp-for="CompanyName" class="form-control" id="cmp-name" placeholder="Company Name">
                    </div>
                    <div class="form-group">
                        <label for="summary">Summary</label>
                        <textarea class="form-control" id="summary" asp-for="Summary" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload image</label>
                        <input class="form-control" asp-for="Image" id="image">
                    </div>
                    <button class="btn btn-primary" type="submit">Save</button>
                    <a asp-area="" asp-controller="Company" asp-action="Companies" class="btn btn-light">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</section>